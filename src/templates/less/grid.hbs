{{#each grid.contents}}@grid-count-{{this.count}}-length: {{this.length}};
{{/each}}
.grid {
{{#each grid.contents}}
    .count-{{this.count}} {
    @ratio: @grid-count-{{this.count}}-length * 1 / {{this.count}};
    {{#each (arrayed this.count)}}
        .span-{{add @index 1}}{{#is (add @index 1) ../count}},
        .span-all{{/is}} {
        @len: @ratio * {{add @index 1}};

        .width; //default

        .basis {
        flex-basis: @len;
        }

        .width {
        width: @len;
        }

        .margin {
        .left; .right;//default
        .left {
        margin-left: @len;
        }
        .right {
        margin-right: @len;
        }
        }
        }
    {{/each}}
    }
{{/each}}
}
